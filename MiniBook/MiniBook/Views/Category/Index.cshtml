@model IEnumerable<MiniBook.Models.THELOAI>

@{
    <meta charset="utf-8">
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenTheLoai)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenTheLoai)
            </td>
            <td>
                @Html.ActionLink("Xóa", "Delete", new { id = item.IDTheLoai }, new { @class = "btn btn-outline-danger" })
            </td>
        </tr>
    }

</table>
